{
  "name": "symian",
  "version": "0.1.0",
  "private": false,
  "description": "A cross platform symlinker.",
  "repository": "https://github.com/Renddslow/symian",
  "license": "MIT",
  "author": "Matt McElwee <mubatt@wyopub.com>",
  "main": "dist/index.js",
  "bin": {
    "symian": "dist/index.js"
  },
  "scripts": {
    "build": "node build.js",
    "postbuild": "tsc --emitDeclarationOnly",
    "pretry": "yarn build",
    "try": "node dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": "@dmsi/prettier-config",
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "concurrency": 4,
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "1m"
  },
  "devDependencies": {
    "@dmsi/prettier-config": "^1.3.0",
    "@types/node": "^14.14.25",
    "ava": "^3.15.0",
    "esbuild": "^0.8.43",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "read-pkg-up": "^7.0.1",
    "sade": "^1.7.4"
  }
}
